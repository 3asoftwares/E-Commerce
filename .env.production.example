# ============================================
# E-COMMERCE PRODUCTION ENVIRONMENT
# ============================================
# IMPORTANT: Never commit this file to version control!
# Copy this to .env.production and configure your secrets

# Node Environment
NODE_ENV=production

# ============================================
# DATABASE CONFIGURATION
# ============================================
MONGO_ROOT_USER=admin
MONGO_ROOT_PASSWORD=your-secure-production-password

# ============================================
# JWT CONFIGURATION
# ============================================
JWT_SECRET=your-super-secret-256-bit-key-for-production
JWT_REFRESH_SECRET=your-refresh-secret-256-bit-key

# ============================================
# CORS CONFIGURATION
# ============================================
ALLOWED_ORIGINS=https://yourdomain.com,https://admin.yourdomain.com,https://seller.yourdomain.com

# ============================================
# FRONTEND URLs
# ============================================
FRONTEND_URL=https://yourdomain.com
ADMIN_URL=https://admin.yourdomain.com
SELLER_URL=https://seller.yourdomain.com

# ============================================
# SERVICE URLs (for GraphQL Gateway)
# ============================================
AUTH_SERVICE_URL=https://auth-api.yourdomain.com
PRODUCT_SERVICE_URL=https://product-api.yourdomain.com
ORDER_SERVICE_URL=https://order-api.yourdomain.com
CATEGORY_SERVICE_URL=https://category-api.yourdomain.com
COUPON_SERVICE_URL=https://coupon-api.yourdomain.com

# ============================================
# CLOUDINARY (IMAGE UPLOADS)
# ============================================
VITE_CLOUDINARY_CLOUD_NAME=your-cloud-name
VITE_CLOUDINARY_UPLOAD_PRESET=your-upload-preset

# ============================================
# EMAIL CONFIGURATION
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@yourdomain.com
SMTP_PASS=your-app-specific-password
EMAIL_FROM=noreply@yourdomain.com

# ============================================
# GOOGLE OAUTH
# ============================================
GOOGLE_CLIENT_ID=your-google-client-id
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your-google-client-id

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=info
ENABLE_FILE_LOGGING=true
